<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Price</th>
      <th>Message</th>
      <th>Published Date</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Color</th>
      <th colspan="8"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.author %></td>
        <td><%= library.price %></td>
        <td><%= library.message %></td>
        <td><%= library.pub_date %></td>
        <td><%= library.address %></td>
        <td><%= library.phone %></td>
        <td><%= library.color %></td>
        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

